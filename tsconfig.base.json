{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@reciptor/app-config": [
        "libs/shared/app-config"
      ],
      "@reciptor/shared/material": [
        "libs/shared/material/src/index.ts"
      ],
      "@reciptor/shared/ui-header": [
        "libs/shared/ui-header/src/index.ts"
      ],
      "@reciptor/tools/data-access": [
        "libs/tools/data-access/src/index.ts"
      ],
      "@reciptor/tools/ui": [
        "libs/tools/ui/src/index.ts"
      ],
      "@reciptor/tools/feature": [
        "libs/tools/feature/src/index.ts"
      ],
      "@reciptor/authentication/feature": [
        "libs/authentication/feature/src/index.ts"
      ],
      "@reciptor/authentication/ui": [
        "libs/authentication/ui/src/index.ts"
      ],
      "@reciptor/authentication/data-access": [
        "libs/authentication/data-access/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
